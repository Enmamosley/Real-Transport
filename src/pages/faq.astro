---
import CustomAccordion from "@/helpers/CustomAccordion";
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import CallToAction from "@/partials/CallToAction.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const call_to_action = (await getEntry(
  "callToAction",
  "call-to-action"
)) as CollectionEntry<"callToAction">;

const faqs = (await getEntry("faq", "faq")) as CollectionEntry<"faq">;

const { header, title } = faqs.data;
---

<Base title={title} meta_title={""} description={""}>
  <section class="section bg-light">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h1
          class="pb-4"
          data-aos="fade-up-sm"
          set:html={markdownify(header.title)}
        />
        <p
          class="pb-8 text-balance"
          data-aos="fade-up-sm"
          data-aos-delay="100"
          set:html={markdownify(header.content)}
        />
      </div>
    </div>
  </section>

  <CustomAccordion faqs={faqs.data} client:only="react" />
  <CallToAction call_to_action={call_to_action} />
</Base>
