---
import ImageMod from "@/components/ImageMod.astro";
import menu from "@/config/menu.json";

const { footer }: { footer: any } = menu;
---

<footer class="section">
  <div class="container">
    <div class="row max-md:gy-5 gx-5 justify-between">
      <div class="col-12 md:col-6" data-aos="fade-right-sm">
        <ImageMod
          class="mb-10 w-40"
          src="/images/logo.svg"
          alt="logo"
          width={0}
          height={0}
        />
        <div class="flex items-center mb-6">
          <a
            class="pr-2 leading-5 border-r border-text"
            href="http://www.realtransport.com.mx">Real Transport 2025</a
          >
          <p class="pl-2">Todos los derechos reservados</p>
        </div>
        <div class="flex items-center mb-6">
          <p class="pr-2 font-medium leading-5 border-r border-text">Crafted by</p>
          <a 
            class="pl-2 hover:text-secondary transition-colors"
            href="https://www.mosley.mx"
            target="_blank"
            rel="noopener noreferrer"
          >Mosley.</a>
        </div>
      </div>
      <div class="col-12 md:col-6">
        <div class="justify-between row g-4">
          {
            footer.map((item: { items: any[] }, i: number) => (
              <div class="col-6">
                <ul
                  class="flex flex-col gap-4"
                  data-aos="fade-right-sm"
                  data-aos-delay={50 + i * 100}
                >
                  {item.items.map((item: any) => (
                    <li class="text-[14px] leading-[20px]">
                      <a href={item.url}>{item.name}</a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
